// [settings][Visual Studio Code workspace settings] for [Visual Studio Code][]
// https://code.visualstudio.com/docs/getstarted/settings#_workspace-settings

// Although
// [EditorConfig][] supports some of these settings
// and
// [Visual Studio Code][] can load [EditorConfig][] with the [extension `EditorConfig.EditorConfig`][Visual Studio Code extension EditorConfig.EditorConfig],
// native configuration is preferable.

{

	"eslint.experimental.useFlatConfig": true,

	// Keep in sync with [EditorConfig][]!
	"files.eol": "\n",

	// Keep in sync with [EditorConfig][]!
	"files.insertFinalNewline": true,

	"search.exclude": {
		// CommonJS loader for [Yarn Plug'n'Play][]
		".pnp.cjs": true,
		// ECMAScript loader for [Yarn Plug'n'Play][]
		".pnp.loader.mjs": true,
	},

	"[javascript]": {

		// Keep in sync with [EditorConfig][]!
		"editor.insertSpaces": false,

	},

	// settings for [JSON][] content
	"[json]": {

		// Keep in sync with [EditorConfig][]!
		"editor.insertSpaces": false,

	},

	// settings for [JSON with Comments][] content
	"[jsonc]": {

		// Keep in sync with [EditorConfig][]!
		"editor.insertSpaces": false,

	},

	"[typescript]": {

		// Keep in sync with [EditorConfig][]!
		"editor.insertSpaces": false,

	},

	// settings for [YAML][] content
	"[yaml]": {

		// Keep in sync with [EditorConfig][]!
		"editor.tabSize": 4,

	},

}

// [EditorConfig]: https://editorconfig.org/
// [JSON]: https://www.json.org/
// [JSON with Comments]: https://code.visualstudio.com/docs/languages/json#_json-with-comments
// [Visual Studio Code]: https://code.visualstudio.com/
// [Visual Studio Code extension EditorConfig.EditorConfig]: https://marketplace.visualstudio.com/items?itemName=EditorConfig.EditorConfig
// [Visual Studio Code workspace settings]: https://code.visualstudio.com/docs/getstarted/settings#_workspace-settings
// [YAML]: https://yaml.org/
// [Yarn Plug'n'Play]: https://yarnpkg.com/features/pnp
