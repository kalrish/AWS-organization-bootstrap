// tasks for Visual Studio Code
// https://code.visualstudio.com/docs/editor/tasks

{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Check Markdown documents with markdownlint-cli2",
			"group": {
				"kind": "test",
			},
			"type": "process",
			"command": "corepack",
			"args": [
				"yarn",
				"exec",
				"--",
				"markdownlint-cli2",
			],
		},
		{
			// "Run ESLint" instead of "Check JavaScript (and TypeScript) with ESLint" because ESLint can check more than JavaScript and TypeScript
			"label": "Run ESLint",
			"group": {
				"kind": "test",
			},
			"type": "process",
			"command": "corepack",
			"args": [
				"yarn",
				"exec",
				"--",
				"eslint",
				"--",
				".",
			],
		},
	],
}
